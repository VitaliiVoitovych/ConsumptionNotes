<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ConsumptionNotes.ViewModels"
             xmlns:controls="using:ConsumptionNotes.Controls"
             xmlns:models="using:ConsumptionNotes.Domain.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ConsumptionNotes.Views.NaturalGasView"
             x:DataType="vm:NaturalGasViewModel">
    <Grid
        ColumnDefinitions="*,*">
        
        <!-- Charts -->
        <ScrollViewer
            VerticalScrollBarVisibility="Hidden">
            <StackPanel
                Spacing="10">
                
                <controls:ChartWidget
                    Text="До оплати"
                    Height="{Binding $parent[UserControl].Bounds.Height}"
                    Series="{Binding NaturalGasChartService.AmountsToPaySeries}"
                    XAxes="{Binding NaturalGasChartService.DateXAxes}"
                    YAxes="{Binding NaturalGasChartService.AmountToPayYAxes}"/>
                
                <controls:ChartWidget
                    Text="Споживання"
                    Height="{Binding $parent[UserControl].Bounds.Height}"
                    Series="{Binding NaturalGasChartService.CubicMeterConsumedSeries}"
                    XAxes="{Binding NaturalGasChartService.DateXAxes}"
                    YAxes="{Binding NaturalGasChartService.ConsumedYAxed}"
                    LegendTextPaint="{Binding NaturalGasChartService.LegendTextPaint}"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Data -->
        <DataGrid
            Grid.Column="1">
            <DataGrid.Columns>
                
                <DataGridTextColumn
                    Header="Місяць та рік"
                    Width="*"/>
                
                <DataGridTextColumn
                    Header="Спожито вдень"
                    Width="*"/>
                
                <DataGridTextColumn
                    Header="Спожито вночі"
                    Width="*"/>
                
                <DataGridTextColumn
                    Header="До оплати"
                    Width="*"/>
                
                <DataGridTemplateColumn
                    Width="Auto">
                    <DataTemplate x:DataType="models:NaturalGasConsumption">
                        <StackPanel 
                            Orientation="Horizontal"
                            Spacing="5">
                            
                            <Button>E</Button>
                            <Button>X</Button>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</UserControl>
