<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConsumptionNotes.Mobile.ViewModels.Adding"
             xmlns:controls="clr-namespace:ConsumptionNotes.Mobile.Controls"
             x:Class="ConsumptionNotes.Mobile.Pages.Adding.ElectricityAddingPage"
             Shell.PresentationMode="ModalAnimated"
             x:DataType="vm:ElectricityAddingViewModel">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="7">
        
        <Label
            FontSize="20"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Text="Новий запис"/>
        
        <Grid
            ColumnDefinitions="*, *">
            <Label
                Text="Обрати місяць та рік"
                VerticalTextAlignment="Center"/>

            <controls:SpinDatePicker
                Grid.Column="1"
                Title="Місяць та рік"
                IsDayVisible="False"
                SelectedDate="{Binding SelectedDate}"/>
        </Grid>

        <Label
            Text="Спожито кВт/год"
            FontSize="18"/>
        <Label
            Text="День"/>

        <controls:NumericUpDown
            Value="{Binding DayKilowattConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment="1"/>

        <Label
            Text="Ніч:"/>

        <controls:NumericUpDown
            Value="{Binding NightKilowattConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment="1"/>

        <Label
            Text="Ціна за кВт/год"
            Margin="0,15,0,0"/>

        <controls:NumericUpDown
            Value="{Binding KilowattPerHourPrice}"
            Minimum="0.0"
            Maximum="100"
            Increment=".01"/>

        <BoxView
            HeightRequest="1"
            Background="{StaticResource LightDarkBrush}"/>

        <Grid
            ColumnDefinitions="*,*"
            Margin="0,10,0,0"
            ColumnSpacing="15">
            <Button
                Grid.Column="0"
                HeightRequest="55"
                Text="Назад"
                Command="{Binding GoToBackCommand}"/>
            <Button
                Grid.Column="1"
                HeightRequest="55"
                Text="Додати запис"
                Command="{Binding AddNoteCommand}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>