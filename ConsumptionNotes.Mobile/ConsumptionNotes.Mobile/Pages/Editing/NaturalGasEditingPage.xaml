<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConsumptionNotes.Mobile.ViewModels.Editing"
             xmlns:controls="clr-namespace:ConsumptionNotes.Mobile.Controls"
             x:Class="ConsumptionNotes.Mobile.Pages.Editing.NaturalGasEditingPage"
             x:DataType="vm:NaturalGasEditingViewModel"
             Shell.PresentationMode="ModalAnimated">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        
        <Label
            Text="{Binding Consumption.Date, StringFormat='{0:dd-MM-yyyy}'}"/>
        
        <Label
            Text="Спожито м³"/>
        <controls:NumericUpDown
            Value="{Binding CubicMeterConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment=".01"/>

        <Label
            Text="Ціна за м³"/>
        <controls:NumericUpDown
            Value="{Binding CubicMeterPrice}"
            Minimum="0.0"
            Maximum="100"
            Increment=".01"/>

        <Grid
            ColumnDefinitions="*,*"
            Margin="0,10,0,0"
            ColumnSpacing="15">
            <Button
                Grid.Column="0"
                HeightRequest="45"
                Text="Назад"
                Command="{Binding GoToBackCommand}"/>
            <Button
                Grid.Column="1"
                HeightRequest="45"
                Text="Оновити запис"
                Command="{Binding UpdateCommand}"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>