<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConsumptionNotes.Mobile.ViewModels.Addition"
             xmlns:controls="clr-namespace:ConsumptionNotes.Mobile.Controls"
             x:Class="ConsumptionNotes.Mobile.Pages.AddNaturalGasPage"
             Shell.PresentationMode="ModalAnimated"
             x:DataType="vm:AddNaturalGasViewModel">
    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Grid
            ColumnDefinitions="*, *">
            <Label
                Text="Обрати місяць та рік"
                VerticalTextAlignment="Center"/>

            <controls:SpinDatePicker
                Grid.Column="1"
                Title="Місяць та рік"
                IsDayVisible="False"
                SelectedDate="{Binding SelectedDate}"/>
        </Grid>

        <Label
            Text="Спожито м³"/>
        <controls:NumericUpDown
            Value="{Binding CubicMeterConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment=".01"/>

        <Label
            Text="Ціна за м³"/>
        <controls:NumericUpDown
            Value="{Binding CubicMeterPrice}"
            Minimum="0.0"
            Maximum="100"
            Increment=".01"/>

        <Grid
            ColumnDefinitions="*,*"
            Margin="0,10,0,0"
            ColumnSpacing="15">
            <Button
                Grid.Column="0"
                HeightRequest="45"
                Text="Назад"
                Command="{Binding GoBackCommand}"/>
            <Button
                Grid.Column="1"
                HeightRequest="45"
                Text="Додати запис"
                Command="{Binding AddCommand}"/>
        </Grid>

    </VerticalStackLayout>
</ContentPage>