<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ConsumptionNotes.Mobile.ViewModels"
             xmlns:controls="clr-namespace:ConsumptionNotes.Mobile.Controls"
             x:Class="ConsumptionNotes.Mobile.Pages.CalculatorPage"
             x:DataType="vm:CalculatorViewModel"
             Shell.PresentationMode="ModalAnimated">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Spacing="7">

        <Label
            Text="Електроенергія" />
        <Label
            Text="Спожито кВт/год"
            FontSize="18" />
        <Label
            Text="День" />

        <controls:NumericUpDown
            Value="{Binding DayKilowattConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment="1" />

        <Label
            Text="Ніч:" />

        <controls:NumericUpDown
            Value="{Binding NightKilowattConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment="1" />

        <Label
            Text="Ціна за кВт/год"
            Margin="0,15,0,0" />

        <controls:NumericUpDown
            Value="{Binding KilowattPerHourPrice}"
            Minimum="0.0"
            Maximum="100"
            Increment=".01" />

        <Label
            FontSize="20"
            FontAttributes="Bold"
            Text="{Binding ElectricityAmountToPay, StringFormat='До оплати: {0:C2}'}"/>
        
        <Border
            StrokeThickness="0.5"
            Stroke="{StaticResource LightDarkBrush}" />

        <Label
            Text="Газ" />
        <Label
            Text="Спожито м³" />
        <controls:NumericUpDown
            Value="{Binding CubicMeterConsumed}"
            Minimum="0"
            Maximum="10000"
            Increment=".01" />

        <Label
            Text="Ціна за м³" />
        <controls:NumericUpDown
            Value="{Binding CubicMeterPrice}"
            Minimum="0.0"
            Maximum="100"
            Increment=".01" />

        <Label
            FontSize="20"
            FontAttributes="Bold"
            Text="{Binding NaturalGasAmountToPay, StringFormat='До оплати: {0:C2}'}"/>
        
        <Border
            StrokeThickness="0.5"
            Stroke="{StaticResource LightDarkBrush}" />

        <Button
            Text="Назад"
            Command="{Binding GoToBackCommand}"
            HeightRequest="45"/>
        
    </VerticalStackLayout>
</ContentPage>